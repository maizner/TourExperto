    <div class="card-body d-flex flex-column step">
        <div class="d-flex flex-column">
            <div class="step-block d-flex flex-row">
                <div class="d-flex flex-row align-items-center step-number-container ">
                    <span class="step-number">2</span>
                    <svg class="svg-logo purple-logo" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 100 100" style="enable-background:new 0 0 100 100;" xml:space="preserve"><path d="M77.9,82.7L77.9,82.7C90.4,72.1,96,55.1,90.6,38.9c-0.8-2.4-1.8-4.8-3.1-7c0,0,0,0,0,0c-4.4-8-11.3-14-19.5-17.8c0,0,0,0,0,0c-38.4-14.6-56.5,16-56.5,16s0,0,0,0C5.4,40,3.5,52.2,7.4,64.1c0.3,1,0.7,2,1.1,3l0,0c0-0.1,0-0.1-0.1-0.1c0,0,0,0,0,0c7.6,18.3,27.7,28.9,47.8,25.6c-0.4-0.2-1.5-0.6,0,0c1.1-0.2,1.1-0.2,0,0c19,7.9,36.6,6.9,36.6,6.9C86.5,94,81.7,88.4,77.9,82.7z M77.9,82.7L77.9,82.7C77.3,83.1,77.3,83.1,77.9,82.7C77.3,81.7,77.3,81.7,77.9,82.7z"></path></svg>
                </div>
                <div >
                    <h5 class="step-title">Datos de Contacto </h5>
                    <p class="step-text"> ¿Ya eres cliente? Gestiona tus reservas Online fácil. <a class="link" href="#" title="Ingresa">Ingresa</a></p>

                </div>
            </div>
        </div>

        <div class="d-flex flex-column">
            {% block contactname %}
                {# {% macro inputTextValid(type, name and id, class,label,labelhealp, text,placeholder, value) %} #}
                {{ formfield.inputTextValid("text", "name", "default","Nombre","","Ingresa nombre/s de contacto", "") }}
            {% endblock %}
            
            {% block contactlastname %}
                {# {% macro inputTextValid(type, name and id, class,label,labelhealp, text,placeholder, value) %} #}
                {{ formfield.inputTextValid("text", "lastname", "default","Apellido","","Ingresa apellido/s de contacto", "") }}
            {% endblock %} 

            {% block contactmail %}
                {# {% macro inputTextValid(type, name and id, class,label text,placeholder, value) %} #}
                {{ formfield.inputMailValid( "email", "default","Email","Ingresa un email válido", "") }}
            {% endblock %} 

            <div class="position-relative">
                {% block contactwhatsapp %}
                    {# {% macro inputTextValid(type, name and id, class,label,labelhealp, text,placeholder, value) %} #}
                    {{ formfield.inputTextValid("number", "whatsapp ", "default","Numero de WhatsApp","Solo para contactarte de ser necesario","+54.11.4567.8888", "") }}
                {% endblock %} 
                <div class="d-flex flex-row">

                </div>
                
            </div>
        </div>

    </div>
</div>