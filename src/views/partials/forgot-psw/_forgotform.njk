<form action="#" class="form_content parsley js_form_validation loginform">
    <section >
        <h2 class="title2 text-center mb-5 ">Restablece tu contraseña</h2>
        <div class="card card-radius-40">    
            <div class="card-body d-flex flex-column align-items-center">
                
                <img class="" src="content/img/iso.png" alt="Vietur">
                <div class="d-flex flex-column align-items-center">
                    {% block usr %}
                        {# {% macro input(type, name, class,label,labelhelp,  placeholder, value) %} #}
                        {{ formfield.input("text", "user", "","Usuario","(Numero de tu DNI para Agentinos -  ó pasaporte solo para extranjeros)","11111111", "") }}
                    {% endblock %}

                    <div class="button-container d-flex flex-column align-items-center mt-3">
                        <input type="submit" value= "ENVIAR" id="forgotPsw" class="btn md_btn fill radius-5 brand-primary"  data-bs-toggle="modal" data-bs-target="#recoverPswtModal">
                    </div>   
                
                </div>


            </div>
        </div> 
    </section>
</form>

<!--Forgot psw modal-->
 <div class="modal fade" id="recoverPswtModal" tabindex="-1" aria-labelledby="recoverPswtModalLabel" aria-hidden="true" >
