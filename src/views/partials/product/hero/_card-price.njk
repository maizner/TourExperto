<div class="card price-card ">            
    <div class="card-body d-flex flex-column align-items-center">
        <div class="d-flex flex-row align-items-center">
            <img src="content/img/iso-sm.png" class="iso-sm card-price-img" title="">
            <div class="d-flex flex-column align-items-start card-price-price">
            <span class="price-off-title">Desde <span class="price-off">$2.049</span><span class="diff">-40%</span></span>
            <span class="currecy">US <span class="price">$1.229</span></span>
            </div>
        </div>
        <div class="d-flex flex-column align-items-center">
            <div class="d-flex flex-row align-items-center">
                <a href="#availability" type="button" class="btn md_btn fill radius-5 brand-primary">Ver disponibilidad</a>
                <span class="bookmark"> <i class="far fa-heart"></i><span>
            </div>
            {% block textCTA %}
                {% include "partials/product/_text-cta.njk" %}
            {% endblock %} 
            
        </div>
    </div>
