 <div class="card card-radius-40 customize-trip">            
    <div class="card-body d-flex flex-column step">
        <div class="d-flex flex-column">
            <div class="step-block d-flex flex-row">
                <div class="d-flex flex-row align-items-center step-number-container ">
                    <span class="step-number">1</span>
                    <svg class="svg-logo purple-logo" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 100 100" style="enable-background:new 0 0 100 100;" xml:space="preserve"><path d="M77.9,82.7L77.9,82.7C90.4,72.1,96,55.1,90.6,38.9c-0.8-2.4-1.8-4.8-3.1-7c0,0,0,0,0,0c-4.4-8-11.3-14-19.5-17.8c0,0,0,0,0,0c-38.4-14.6-56.5,16-56.5,16s0,0,0,0C5.4,40,3.5,52.2,7.4,64.1c0.3,1,0.7,2,1.1,3l0,0c0-0.1,0-0.1-0.1-0.1c0,0,0,0,0,0c7.6,18.3,27.7,28.9,47.8,25.6c-0.4-0.2-1.5-0.6,0,0c1.1-0.2,1.1-0.2,0,0c19,7.9,36.6,6.9,36.6,6.9C86.5,94,81.7,88.4,77.9,82.7z M77.9,82.7L77.9,82.7C77.3,83.1,77.3,83.1,77.9,82.7C77.3,81.7,77.3,81.7,77.9,82.7z"></path></svg>
                </div>
                <div >
                    <h5 class="step-title">Personaliza tu viaje.</h5>
                    <p class="step-subtitle"> Completa solo los datos que interesen </p>

                </div>
            </div>
        </div>

        <div class="d-flex flex-column">
             {% block departure %}
                {{formfield.input("date", "departure","default", "Inicio del viaje", "", "")}}
            {% endblock %}
            
            {% block duration %}
                {{formfield.input("text", "duration","default", "Duración del viaje", "", "3 días")}}
            {% endblock %}

            {% block paxnumber %}
                {{ formfield.comboSingle("paxnumber", "default","nosearch","Cantidad de pasajeros", "Selecciona cantidad","width:100%","1","2", "3", "...") }}
            {% endblock %}

            <div class="d-flex flex-row">
                
                <div class="form-group default">
                    <div class="position-relative">
                        <label for="paxday">Tipo de viaje</label>
                        <span class="label-help">Quieres viajar en grupo o en un tour privado? </span>
                    </div>
                    <div class="d-flex flex-row two_elem_cont">
                        <div class="form-group two_elem">
                            <div class="d-flex checkbox">
                                <div class="col-10">
                                    <label class="container-check">Grupal
                                        <input type="radio" name="typeoftrip" id="type1" >
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>                        
                        </div>
                        <div class="form-group two_elem">
                            <div class="d-flex checkbox">
                                <div class="col-10">
                                    <label class="container-check">Privado
                                        <input type="radio" name="typeoftrip" id="type2" >
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>    
                        </div>
                    </div>
                </div>
                
            </div>

            {% block categoryHotel %}
                {# {% macro comboSingle(name,formGroupClass, searchclass, label, placeholder, style, o0,o1,o2,o3) %} #}
                {{ formfield.comboSingle("categoryHotel","default", "nosearch","Categoría Hotelera", "Selecciona categoría hotelera","width:100%","Turista","Turista superior", "Lujo", "...") }}
            {% endblock %}

            {% block aditCities %}
                {{formfield.input("text", "aditCities","default", "Ciudades adicionales", "", "Escribe aquí..")}}
            {% endblock %}

            {% block adiInfo %}
                {{formfield.Textarea("adiInfo", "textarea","Quieres agregar algun otro servicio, pedido o comentario adicional?",  "Escribe aquí ...", "")}}
            {% endblock %}
            
            

        </div>

    </div>
</div>