 <div class="filters">
    <h5>Filtros</h5>
    <div class="filter-group">
        
        <!--Duración-->
        <div class="slider-container">
            <label for="sliderDuracion"> Duración (Días) </label>
            <input type="text" id="sliderDuracion" class="slider" />
        </div>
        <!--Duración-->

        <!--Región-->
        <div class="form-group">
            <select  class="form-control select2" id="region" name="region" 
            tabindex="-1" aria-hidden="true"  style="width:100%" data-placeholder="Región" >
                <option></option>
                {% for item in regionOptions %}
                    <option value="{{item.item_name}}" >{{ item.item_name }}</option>
                {% endfor %}
            </select>
        </div>

        <!--Países multiselect-->
        <div class="form-group">
            <select  class="form-control select2" id="paises" name="paises"   multiple="multiple"
            tabindex="-1" aria-hidden="true"  style="width:100%" data-placeholder="Paises" >
                <option></option>
                {% for item in countryOptions %}
                    <option value="{{item.item_name}}" >{{ item.item_name }}</option>
                {% endfor %}
            </select>
        </div>

        <!--Ciudades multiselect-->
        <div class="form-group">
            <select  class="form-control select2" id="ciudades" name="ciudades"  multiple="multiple"
            tabindex="-1" aria-hidden="true"  style="width:100%" data-placeholder="Ciudades" >
                <option></option>
                {% for item in cityOptions %}
                    <option value="{{item.item_name}}" >{{ item.item_name }}</option>
                {% endfor %}
            </select>
        </div>

            <!--Mes y año de salida-->
            <div class="form-group">
                <select  class="form-control select2" id="mes" name="mes" 
                tabindex="-1" aria-hidden="true"  style="width:100%" data-placeholder="Mes de salida" >
                    <option></option>
                    {% for item in monthOptions %}
                        <option {% if item.item_name == 'Marzo' %} selected {% endif %}
                        value="{{item.item_name}}" >{{ item.item_name }}</option>
                    {% endfor %}
                </select>
            </div>
        
    </div>
    <div class="filter-group divisor">
        <!--Acordión-->
        <div class="accordion accordion-flush" id="moreFilters">

            <div class="accordion-item">

                <h2 class="accordion-header" id="heading-morefilters">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#content-morefilters" aria-expanded="false" aria-controls="content-morefilters">
                        Más Filtros
                    </button>
                </h2>

                <div id="content-morefilters" class="accordion-collapse collapse" aria-labelledby="heading-morefilters" data-bs-parent="#moreFilters">
                    <!--Interior Acordión-->

                    <!--Proveedor-->
                    <div class="form-group">
                        <select  class="form-control select2" id="supplier" name="supplier" 
                        tabindex="-1" aria-hidden="true"  style="width:100%" data-placeholder="Proveedor" >
                            <option></option>
                            {% for item in supplierOptions %}
                                <option value="{{item.item_name}}" >{{ item.item_name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <!--Tipo de producto-->
                    <div class="checkboxes divisor">
                        <p class="filter-inner-title">Tipo de producto</p>
                        <!--Religiosos-->
                        <div class="d-flex checkbox">
                            <div class="col-10">
                                <label class="container-check">Religiosos
                                    <input type="checkbox" >
                                    <span class="checkmark" ></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>1964</p>
                            </div>
                        </div>
                            <!--Exclusivos-->
                        <div class="d-flex checkbox">
                            <div class="col-10">
                                <label class="container-check">Exclusivos
                                    <input type="checkbox" >
                                    <span class="checkmark" ></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>1951</p>
                            </div>
                        </div>
                            <!--Solos y solas-->
                        <div class="d-flex checkbox">
                            <div class="col-10">
                                <label class="container-check">Solos y solas
                                    <input type="checkbox" >
                                    <span class="checkmark" ></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>1522</p>
                            </div>
                        </div>
                            <!--LGBTQ +-->
                        <div class="d-flex checkbox">
                            <div class="col-10">
                                <label class="container-check">LGBTQ +
                                    <input type="checkbox" >
                                    <span class="checkmark" ></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>934</p>
                            </div>
                        </div>
                            <!--Romanticos-->
                        <div class="d-flex checkbox">
                            <div class="col-10">
                                <label class="container-check">Romanticos
                                    <input type="checkbox" >
                                    <span class="checkmark" ></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>843</p>
                            </div>
                        </div>
                            <!--En Familia-->
                        <div class="d-flex checkbox">
                            <div class="col-10">
                                <label class="container-check checked">En Familia
                                    <input type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>756</p>
                            </div>
                        </div>
                        
                        <!--Viajes de Mujeres-->
                        <div class="d-flex checkbox">
                            <div class="col-10">
                                <label class="container-check">Viajes de Mujeres
                                    <input type="checkbox" >
                                    <span class="checkmark" ></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>320</p>
                            </div>
                        </div>
                        
                        <!--Btn -->
                        <a href="#" class="btn ms_btn fill radius-10 brand-primary load-more">Mostrar más</a>

                        <!--Con Aéreos Incluidos-->
                        <div class="d-flex checkbox mt-4">
                            <div class="col-10">
                                <label class="container-check">Con Aéreos Incluidos
                                    <input type="checkbox">
                                    <span class="checkmark" ></span>
                                </label>
                            </div>
                            <div class="col-2 text-right ">
                                <p>546</p>
                            </div>
                        </div>

                    </div>
                    <!--Tipo de producto-->

                
                    
                    <div class="slider-container divisor">
                        <label for="sliderPrecio" class="filter-inner-title"> Precio </label>
                        <input type="text" id="sliderPrecio" class="slider" />
                    </div>
                

                </div>
            </div>
        </div>
    </div>
</div>